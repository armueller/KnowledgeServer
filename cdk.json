            "cpu": 1024,
            "memoryLimitMiB": 2048,
            "desiredCount": 1,
            "minCapacity": 1,
            "maxCapacity": 1
          },
          "dns": {
            "domainName": "tabus10.com",
            "hostedZoneId": "Z024767431QEZCWVKVY0A"
