{
  "name": "knowledge-server",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "npm run load-secrets:staging && NODE_ENV=local AWS_PROFILE=knowledge-server react-router dev --mode staging --cors",
    "dev:prod": "npm run load-secrets:prod && AWS_PROFILE=knowledge-server react-router dev --mode prod --cors",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint --max-warnings=0 .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "install-git-hooks": "husky",
    "deploy:staging": "NODE_ENV=staging AWS_PROFILE=knowledge-server npx aws-cdk deploy --context environment=staging",
    "deploy:prod": "NODE_ENV=production AWS_PROFILE=knowledge-server npx aws-cdk deploy --context environment=prod",
    "load-secrets:staging": "NODE_ENV=staging AWS_PROFILE=knowledge-server tsx scripts/load-secrets-into-env.ts",
    "load-secrets:prod": "NODE_ENV=prod AWS_PROFILE=knowledge-server tsx scripts/load-secrets-into-env.ts",
    "migrate:rmwm": "NODE_ENV=staging tsx scripts/migrate-rmwm-context.ts",
    "seed:database": "NODE_ENV=staging tsx scripts/seed-database.ts",
    "mcp:server": "tsx mcp-server/index.ts",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --max-warnings=0 --no-warn-ignored"
    ]
  },
  "dependencies": {
    "@aws-cdk/aws-neptune-alpha": "^2.209.1-alpha.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.826.0",
    "@aws-sdk/client-secrets-manager": "^3.787.0",
    "@aws-sdk/client-ssm": "^3.840.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@react-router/fs-routes": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@types/d3": "^7.4.3",
    "apollo-server-express": "^3.12.1",
    "aws-cdk-lib": "^2.190.0",
    "constructs": "^10.4.2",
    "d3": "^7.9.0",
    "graphql": "^16.8.1",
    "gremlin": "^3.7.3",
    "http-status-codes": "^2.3.0",
    "isbot": "^5.1.27",
    "neo4j-driver": "^5.26.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.2",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@mrgrain/cdk-esbuild": "^5.5.4",
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/gremlin": "^3.6.7",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitest/ui": "^3.2.4",
    "dotenv-flow": "^4.1.0",
    "esbuild-plugin-tsc": "^0.5.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "react-router-devtools": "^1.1.0",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
